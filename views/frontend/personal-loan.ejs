<%- include('./partials/header') %>

<!-- Banner Start -->
<section class="banner">
  <div class="container">
    <div class="row gy-4 gy-sm-0 align-items-center">
      <div class="col-6 col-sm-6">
        <div class="banner__content text-center text-sm-start">
  <!-- Dynamic heading with consistent style -->
  <h1 
    class="banner__title display-4 fw-bold wow fadeInLeft" 
    data-wow-duration="0.8s"
    style="color: #ee4e34; letter-spacing: 0.5px;"
  >
    <%- service.heading %>
  </h1>

  <!-- Breadcrumb with improved styling -->
  <nav aria-label="breadcrumb" class="mt-3">
    <ol class="breadcrumb justify-content-center justify-content-sm-start wow fadeInRight" data-wow-duration="0.8s">
      <li class="breadcrumb-item">
        <a href="/" class="text-muted text-decoration-none hover-underline">Home</a>
      </li>
      <li class="breadcrumb-item">
        <a href="/services" class="text-muted text-decoration-none hover-underline">Services</a>
      </li>
      <li class="breadcrumb-item active text-dark" aria-current="page">
        <%- service.heading %>
      </li>
    </ol>
  </nav>
</div>

      </div>
      <div class="col-6 col-sm-6 text-end">
                    <div class="banner__thumb wow fadeInRight" data-wow-duration="0.8s">
                        <img src="/images/loan_comparison_banner.png" width="300" alt="banner image">
                    </div>
                </div>
    </div>
  </div>
</section>

<!-- Banner End -->

<section class="personal-loan">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 col-md-6">
                <div class="loan-content">
                    <h3><%- service.heading %> </h3>
                    <p><%- service.description %></p>
                    <a href="/enquiry/<%= service.id %>" class="btn_theme btn_theme_active">
                        Enquiry Now <i class="bi bi-arrow-up-right"></i><span></span>
                    </a>
                </div>
            </div>
            <div class="col-lg-5 col-md-6">
                <div class="loan-img">
                    <img class="img-fluid" src="<%- service.image_1 %>" alt="<%= service.heading %>" onerror="this.src='/images/fallback-service.png'">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FAQ Start -->
<section class="section faq-section personal-loan" id="faqa">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5 col-md-6">
                <div class="loan-img">
                    <img src="<%- service.image_2 %>" alt="<%= service.heading %>" onerror="this.src='/images/fallback-service.png'">
                </div>
            </div>
            <div class="col-lg-7 col-md-6">
                <div class="accordion wow fadeInUp" data-wow-duration="0.8s" id="faq2">
                    <% if(faqs && faqs.length > 0) { %>
                        <% faqs.forEach((faq, index) => { %>
                        <div class="accordion-item">
                            <h5 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2-accordion-<%= index+1 %>" aria-expanded="false" aria-controls="faq2-accordion-<%= index+1 %>">
                                    <%- faq.question %>
                                </button>
                            </h5>
                            <div id="faq2-accordion-<%= index+1 %>" class="accordion-collapse collapse" data-bs-parent="#faq2">
                                <div class="accordion-body">
                                    <p><%- faq.answer %></p>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    <% } else { %>
                        <div class="text-center py-4">
                            <p class="text-muted">No FAQs available for this service.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- FAQ End -->

<%- include('./partials/footer') %>