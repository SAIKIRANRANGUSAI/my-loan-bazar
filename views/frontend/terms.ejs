<%- include('./partials/header') %>

<!-- Banner Section -->
<section class="banner">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12">
        <div class="banner__content text-center">
          <h1 class="banner__title display-4 wow fadeInDown" data-wow-duration="0.8s">
            <%= title %>
          </h1>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center wow fadeInUp" data-wow-duration="0.8s">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Dynamic Content Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10 col-md-12">
        <div class="card shadow-sm p-4 border-0">
          <div class="dynamic-content">
            <!-- âœ… Safely render dynamic HTML content -->
            <% if (content) { %>
              <%- content %>
            <% } else { %>
              <p>No content available right now.</p>
            <% } %>
          </div>

          <div class="text-center mt-5">
            <a href="/" class="btn btn_theme btn_theme_active px-4">
              Back to Home
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('./partials/footer') %>
