<%- include('../layouts/admin_layouts_header', { title: 'Admin | Dashboard', currentPage: 'dashboard' }) %>
<%- include('../layouts/admin_layouts_sidebar', { currentPage: 'dashboard' }) %>

<div class="admin-container">
    <div class="page-header">
        <h1 class="page-title">Contact Submissions</h1>
        <p class="page-subtitle">Manage and review all contact form submissions from your website</p>
    </div>

    <% if(message) { %>
        <div class="alert-success" role="alert">
            <span class="alert-icon">âœ“</span>
            <%= message %>
            <button type="button" class="alert-close" onclick="this.parentElement.style.display='none'">&times;</button>
        </div>
    <% } %>

    <% if (contacts.length === 0) { %>
        <div class="no-data-section">
            <i class="fas fa-inbox fa-3x mb-3"></i>
            <h3>No Submissions Yet</h3>
            <p class="text-muted">No contact form submissions have been received yet.</p>
        </div>
    <% } else { %>
        <section class="form-section">
            <div class="section-header">
                <h2 class="section-title">Contact Messages</h2>
                <p class="section-description">View and manage all contact form submissions</p>
            </div>

            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Subject</th>
                            <th>Message</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% contacts.forEach((contact, index) => { %>
                            <tr>
                                <td class="index-cell"><%= index + 1 + ((currentPage-1) * 10) %></td>
                                <td class="name-cell"><strong><%= contact.name %></strong></td>
                                <td class="email-cell"><%= contact.email %></td>
                                <td class="phone-cell"><%= contact.phone %></td>
                                <td class="subject-cell"><%= contact.subject %></td>
                                <td class="message-cell" data-full-message="<%= contact.message.replace(/"/g, '&quot;') %>">
                                    <%= contact.message.length > 50 ? contact.message.substring(0, 50) + '...' : contact.message %>
                                </td>
                                <td class="date-cell"><%= new Date(contact.created_at).toLocaleString() %></td>
                                <td class="action-cell">
                                    <form action="/admin/dashboard/delete/<%= contact.id %>" method="POST" style="display: inline-block; margin: 0;" onsubmit="return confirm('Are you sure you want to delete this message?');">
                                        <button type="submit" class="btn-delete" title="Delete this message" style="display: inline-flex !important; visibility: visible !important;">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <nav class="pagination-nav">
                    <ul class="pagination">
                        <% for(let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="/admin/dashboard?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        </section>
    <% } %>
</div>

<!-- Message Popup Modal -->
<div id="messagePopup" class="message-popup">
    <div class="popup-content">
        <div class="popup-header">
            <h4>Full Message</h4>
            <span class="popup-close">&times;</span>
        </div>
        <div class="popup-body">
            <p id="popupMessageText"></p>
        </div>
    </div>
</div>

<script>
    // Simple hover popup for message
    document.addEventListener('DOMContentLoaded', function() {
        const messageCells = document.querySelectorAll('.message-cell');
        const popup = document.getElementById('messagePopup');
        const popupText = document.getElementById('popupMessageText');
        const closeBtn = document.querySelector('.popup-close');

        messageCells.forEach(cell => {
            cell.addEventListener('mouseenter', function() {
                const fullMessage = this.getAttribute('data-full-message');
                popupText.textContent = fullMessage;
                popup.style.display = 'block';
                // Position popup near the cell
                const rect = this.getBoundingClientRect();
                popup.style.left = rect.left + 'px';
                popup.style.top = (rect.bottom + 10) + 'px';
            });

            cell.addEventListener('mouseleave', function() {
                setTimeout(() => {
                    popup.style.display = 'none';
                }, 100); // Small delay to allow smooth transition
            });
        });

        closeBtn.addEventListener('click', function() {
            popup.style.display = 'none';
        });

        // Close on outside click
        window.addEventListener('click', function(event) {
            if (event.target === popup) {
                popup.style.display = 'none';
            }
        });

        // Debug: Log if delete buttons are present
        console.log('Delete buttons count:', document.querySelectorAll('.btn-delete').length);
    });
</script>

<style>
    .admin-container {
        padding: 32px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        min-height: calc(100vh - 120px);
    }

    .page-header {
        margin-bottom: 40px;
        padding-bottom: 16px;
        border-bottom: 1px solid #e5e7eb;
    }

    .page-title {
        font-size: 28px;
        font-weight: 700;
        color: #1f2937;
        margin: 0 0 4px 0;
    }

    .page-subtitle {
        font-size: 16px;
        color: #6b7280;
        margin: 0;
    }

    .alert-success {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: linear-gradient(135deg, #10b981, #059669);
        color: #ffffff;
        padding: 16px 20px;
        border-radius: 8px;
        font-weight: 500;
        margin-bottom: 24px;
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2);
        animation: slideDown 0.3s ease-out;
    }

    .alert-icon {
        font-size: 18px;
        margin-right: 8px;
    }

    .alert-close {
        background: none;
        border: none;
        color: #ffffff;
        font-size: 20px;
        cursor: pointer;
        padding: 0 4px;
        border-radius: 4px;
        transition: background 0.2s;
    }

    .alert-close:hover {
        background: rgba(255, 255, 255, 0.1);
    }

    @keyframes slideDown {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .no-data-section {
        text-align: center;
        padding: 60px 20px;
        color: #6b7280;
        background: #f9fafb;
        border-radius: 12px;
        border: 1px solid #e5e7eb;
    }

    .no-data-section i {
        color: #d1d5db;
        margin-bottom: 16px;
    }

    .no-data-section h3 {
        color: #374151;
        margin-bottom: 8px;
    }

    .form-section {
        background: #f9fafb;
        padding: 32px;
        border-radius: 12px;
        border: 1px solid #e5e7eb;
    }

    .section-header {
        margin-bottom: 24px;
    }

    .section-title {
        font-size: 22px;
        font-weight: 700;
        color: #1f2937;
        margin: 0 0 4px 0;
    }

    .section-description {
        font-size: 14px;
        color: #6b7280;
        margin: 0;
        font-weight: 400;
    }

    /* Table Styles */
    .table-container {
        background: white;
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid #e5e7eb;
        max-height: 600px;
        overflow-y: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
        table-layout: fixed; /* Helps with column widths */
    }

    .table th {
        background: #f9fafb;
        padding: 16px;
        text-align: left;
        font-weight: 600;
        color: #374151;
        border-bottom: 1px solid #e5e7eb;
        font-size: 14px;
        position: sticky;
        top: 0;
        z-index: 10;
        width: auto; /* Allow auto for most, but fixed for action */
    }

    .table th:last-child {
        width: 120px; /* Ensure action column has space */
    }

    .table td {
        padding: 16px;
        border-bottom: 1px solid #e5e7eb;
        vertical-align: middle;
        font-size: 14px;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .table tr:last-child td {
        border-bottom: none;
    }

    .table tr:hover {
        background: #f8fafc;
    }

    .index-cell {
        font-weight: 600;
        color: #6b7280;
        width: 60px;
    }

    .name-cell {
        font-weight: 600;
        color: #1f2937;
        min-width: 120px;
    }

    .email-cell {
        color: #3b82f6;
        min-width: 150px;
    }

    .phone-cell {
        color: #374151;
        min-width: 120px;
    }

    .subject-cell {
        color: #374151;
        min-width: 150px;
        max-width: 200px;
        word-wrap: break-word;
    }

    .message-cell {
        color: #6b7280;
        min-width: 200px;
        max-width: 300px;
        word-wrap: break-word;
        line-height: 1.4;
        cursor: pointer;
        position: relative;
        transition: background-color 0.2s ease;
    }

    .message-cell:hover {
        background-color: #f0f9ff;
        border-radius: 4px;
    }

    .date-cell {
        color: #6b7280;
        white-space: nowrap;
        min-width: 150px;
    }

    .action-cell {
        width: 120px !important;
        text-align: center;
        vertical-align: middle;
        padding: 16px 8px;
    }

    /* Delete Button Styles - Made more visible with text */
    .btn-delete {
        background: #ef4444 !important;
        color: white !important;
        border: none !important;
        padding: 8px 16px !important;
        border-radius: 6px !important;
        font-size: 12px !important;
        font-weight: 500 !important;
        cursor: pointer !important;
        display: inline-flex !important;
        align-items: center !important;
        justify-content: center !important;
        position: relative !important;
        transition: all 0.2s !important;
        min-width: 80px !important;
        height: auto !important;
        visibility: visible !important;
        opacity: 1 !important;
    }

    .btn-delete i {
        pointer-events: none;
        font-size: 14px;
        margin-right: 4px;
    }

    .btn-delete:hover {
        background: #dc2626 !important;
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(239, 68, 68, 0.3);
    }

    /* Tooltip for delete button */
    .btn-delete[title]:hover::after {
        content: attr(title);
        position: absolute;
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        background: rgba(0,0,0,0.8);
        color: #fff;
        padding: 6px 10px;
        border-radius: 4px;
        font-size: 12px;
        white-space: nowrap;
        z-index: 100;
        margin-bottom: 5px;
    }

    /* Form styles for delete button */
    .action-cell form {
        margin: 0 !important;
        display: inline-block !important;
        width: 100% !important;
    }

    /* Pagination */
    .pagination-nav {
        margin-top: 20px;
        display: flex;
        justify-content: center;
    }

    .pagination {
        display: flex;
        justify-content: center;
        gap: 4px;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .page-item.active .page-link {
        background: #3b82f6;
        color: white;
        border-color: #3b82f6;
    }

    .page-link {
        padding: 8px 12px;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        color: #374151;
        text-decoration: none;
        font-size: 14px;
        transition: all 0.2s;
    }

    .page-link:hover {
        background: #f3f4f6;
        border-color: #9ca3af;
    }

    /* Message Popup Styles */
    .message-popup {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.1);
        backdrop-filter: blur(4px);
    }

    .popup-content {
        background: white;
        border-radius: 12px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
        max-width: 400px;
        width: 90%;
        position: absolute;
        animation: fadeInUp 0.3s ease-out;
    }

    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .popup-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 20px;
        border-bottom: 1px solid #e5e7eb;
        background: #f9fafb;
        border-radius: 12px 12px 0 0;
    }

    .popup-header h4 {
        margin: 0;
        font-size: 16px;
        font-weight: 600;
        color: #1f2937;
    }

    .popup-close {
        font-size: 24px;
        cursor: pointer;
        color: #6b7280;
        padding: 0 4px;
        border-radius: 4px;
        transition: color 0.2s;
    }

    .popup-close:hover {
        color: #ef4444;
    }

    .popup-body {
        padding: 20px;
        max-height: 300px;
        overflow-y: auto;
    }

    .popup-body p {
        margin: 0;
        line-height: 1.6;
        color: #374151;
        font-size: 14px;
    }

    /* Responsive adjustments */
    @media (max-width: 1024px) {
        .admin-container {
            margin: 0 20px;
            padding: 24px;
        }
    }

    @media (max-width: 768px) {
        .admin-container {
            margin: 0;
            border-radius: 0;
            box-shadow: none;
        }

        .form-section {
            padding: 24px;
        }

        .table-container {
            max-height: 500px;
        }

        .table {
            display: block;
            overflow-x: auto;
            white-space: nowrap;
        }

        .action-cell {
            width: 100px !important;
            min-width: 100px;
        }

        .message-cell {
            max-width: 200px;
            white-space: normal;
        }

        .subject-cell {
            max-width: 150px;
        }

        .btn-delete {
            min-width: 70px !important;
            padding: 6px 12px !important;
            font-size: 11px !important;
        }

        .popup-content {
            width: 95%;
            max-width: 350px;
        }
    }

    @media (max-width: 640px) {
        .page-title {
            font-size: 24px;
        }

        .section-title {
            font-size: 20px;
        }

        .table th,
        .table td {
            padding: 12px 8px;
            font-size: 13px;
        }

        .btn-delete {
            min-width: 60px !important;
            padding: 6px 8px !important;
            font-size: 11px !important;
        }

        .popup-header {
            padding: 12px 16px;
        }

        .popup-body {
            padding: 16px;
        }
    }
</style>

